<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@color/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3" >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="@string/Cashier"
                android:id="@+id/cash_sw"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tview"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="25dp"
            android:hint="@string/hint"
            android:enabled="false"
            android:singleLine="true"
            android:textColor="@color/btn"
            android:textColorHint="@color/btn"
            android:textColorHighlight="@color/btn"
            android:textColorLink="@color/btn" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/btn" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left|top" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/Grocery"
                    android:id="@+id/groc"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/auto"
                    android:layout_weight="1"
                    android:text="@string/Automotive"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/General"
                    android:id="@+id/general"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/clear"
                    android:layout_weight="1"
                    android:text="@string/Clear"
                    android:textSize="12sp"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_gravity="left|top" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/seven"
                    android:id="@+id/b7"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/eight"
                    android:id="@+id/b8"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nine"
                    android:id="@+id/b9"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/refund"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/Refund" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_gravity="left|top" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/four"
                    android:id="@+id/b4"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/five"
                    android:id="@+id/b5"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/six"
                    android:id="@+id/b6"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/gst"
                    android:id="@+id/gst"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_gravity="left|top" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/one"
                    android:id="@+id/b1"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/two"
                    android:id="@+id/b2"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/three"
                    android:id="@+id/b3"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/pst"
                    android:id="@+id/pst"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_weight="1"
                android:layout_gravity="left|top" >

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/zero"
                    android:id="@+id/b0"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dec"
                    android:id="@+id/dot"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/dzero"
                    android:id="@+id/b00"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="@string/total"
                    android:id="@+id/total"
                    android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackground" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#7d7123" />
    </LinearLayout>
</LinearLayout>
